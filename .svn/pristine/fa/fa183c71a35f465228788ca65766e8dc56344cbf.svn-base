@import "../styles/item_attributes.scss";

ion-header {
  height: 13.5%;
}
ion-toolbar.header {
  background-size: contain;
  background-repeat: no-repeat;
  --background: url("/assets/img/declaration-bg.svg") no-repeat;
  background: url("/assets/img/declaration-bg.svg") no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  height: 100%;
  display: flex;
  .mainContainer {
    display: flex;
    // flex-direction: column;
    padding-bottom: 6%;
    .backArrow {
      display: flex;
      width: 10%;
      /* padding-left: 10px; */
      color: white;
      /* align-items: center; */
      justify-content: center;
    }
    .header-label {
      display: flex;
      width: 80%;
      /* padding-left: 10px; */
      color: white;
      /* align-items: center; */
      justify-content: center;
      font-size: 1.5rem;
      letter-spacing: 0.16rem;
      text-transform: uppercase;
    }
    .header-right {
      display: flex;
      width: 10%;
      /* padding-left: 10px; */
      color: white;
      /* align-items: center; */
      justify-content: center;
    }
    .header-right ion-button {
      --color: #fff;
    }
  }
}

:root {
  .popover-content {
      left: 0 !important;
      width: 100%;
  }
  .sc-ion-popover-md-h {
      --backdrop-opacity: var(--ion-backdrop-opacity, 0.0);
      --box-shadow: 0px 3px 6px 3px #00000029;
  }
}

ion-toolbar.agent-code-header {
  height: 42%;
  display: flex;
  position: absolute;
  top:58%;
  ion-select {
    font-size: 1.1rem; 
    color: #{$formFieldBlue};
    font-family: "Dubai";
    font-weight: 600;
    margin-top: -3%;
    padding-bottom: 1%;
  }
  ion-select::part(icon) {
      display: none;
  }
  .select-disabled, .item-select-disabled ion-label {
    opacity: 1;
  }
  .arrow-down-icon{
      position: absolute;
      right: 1rem;
      bottom: 1.3rem;
      font-size: 1.5rem;
      color: #87A3EA;
  }
}

.agent-interface{
  width: 99%;
  left: 0.5% !important;
  right: 0.5% !important;
  border-radius: 5px;
}
.select-agent-opt {
  font-size: 0.92rem;
  font-weight: 600;
  font-family: "Dubai";
  color: #{$formFieldBlue};
  padding-right: 15px;
  opacity: 0.9;
}