@import "../../styles/item_attributes.scss";

.decl-details-popup {
    display: flex;
    padding: 15px;
    align-items: center;
    .right-arrow {
        fill: #cacaca;
        zoom: 1.5;
    }
    .relativePosition {
        position: relative;
    }
    .componentMargins {
        @include componentMargins;
        div.smallUnderline::after {
            left: 7%;
            width: 50%;
            @include thickUnderLine;
        }
        .payLabel {
            @include boldBlackText;
        }
    }
}
