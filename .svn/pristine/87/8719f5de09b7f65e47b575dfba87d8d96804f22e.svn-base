@import "../../../../styles/item_attributes.scss";

#booking-card{
        .lightShadow {
            @include light_shadow;
            font-family: "Dubai";
            font-weight: 600;
        .card-content{
            padding: 0.6rem;
            padding-top: 0;
            padding-bottom: 0.2rem;
                .border-bottom-row {
                    border-bottom: 2px solid #c7c2c2;
                    width: 100%;
                    margin-bottom: 0.5rem;
                    .margin-top {
                        margin-top: 0.5rem;
                    }
                } 
                
            }
            .regular-font {
                color: #848484;
                font-size: 1rem;
            } 
            .data-font {
                color: #0e1b3d;
                font-size: 1.1rem;
                .date-font {
                    font-size: 1rem;
                }
            }
            .booking-menu-total {
                text-transform: uppercase;
                font-size: 1.7rem;
                color: #0568ae;
              }
              .booking-container-status {
                text-transform: uppercase;
                font-size: 0.9rem;
              }
              .booking-receipt-icon-disable {
                zoom: 3.5;
                vertical-align: middle;
                opacity: 0.2;
              }
              .booking-receipt-icon {
                zoom: 3.5;
                vertical-align: middle;
              }
              .payment-pending-card-content {
                background-color: #ffbc21;
                padding: 0;
                font-size: 0.9rem;
                color: #000000;
              }
              .payment-fail-card-content {
                background-color: #ff3e42;
                padding: 0;
                font-size: 0.9rem;
                color: #ffffff;
              }
              .payment-icon {
                zoom: 1.5;
                margin-right: 0.2rem;
                vertical-align: middle;
              }
              .repayment-icon {
                zoom: 1.1;
                margin-right: 0.5rem;
                vertical-align: middle;
              }
        }
        
}

