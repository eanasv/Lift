@import "../../styles/item_attributes.scss";

.form-element-group {
  @include form_element_group;

  fieldset {
    border-style: solid;
    border-color: #d1d3d8;

    border-style: solid;
    border: 0.13rem solid #b8bcc7;
    border-radius: 0.4rem;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;

    legend {
      font-weight: 600;
      padding-left: 2px;
      padding-right: 3px;
      background-color: #ffffff;
      color: #b8bcc7;
    }
  }

  ion-select {
    --padding-start: 10px;
    font-weight: bold;
    width: 100%;
    height: 1rem;
    color: #000;
  }

  .errors {
    margin: 2px;
    margin-left: 20px;
    font-size: 0.8rem;
  }

  .description {
    margin: 2px;
    margin-left: 20px;
    font-size: 0.8rem;
  }

}

.selectAddAddr {
  font-size: 0.9rem;
  font-weight: 600;
  font-family: "Dubai";
  letter-spacing: 0px;
  color: #6f6f70;
  opacity: 1;
  padding-right: 15px;
}

.my-custom-interface  {
  --width: 80%;
  left: 10% !important;
  right: 10% !important;
  border-radius: 5px;
}